{
  "name": "accessifix-extension",
  "version": "0.1.0",
  "description": "Professional accessibility extension that automatically fixes web accessibility issues using rule-based, deterministic logic",
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "firefox",
    "chrome",
    "extension",
    "contrast",
    "aria",
    "keyboard-navigation",
    "screen-reader"
  ],
  "author": {
    "name": "AccessiFix Team",
    "email": "team@accessifix.tools",
    "url": "https://accessifix.tools"
  },
  "license": "MIT",
  "homepage": "https://github.com/yourusername/accessifix-extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/accessifix-extension.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/accessifix-extension/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "npm run clean && npm run build:prod",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "clean": "rimraf dist build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint background/ content/ popup/ options/ utils/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md,css,html}\" --ignore-path .prettierignore",
    "validate": "npm run lint && npm run format:check && npm run test",
    "version:patch": "npm version patch && npm run changelog",
    "version:minor": "npm version minor && npm run changelog",
    "version:major": "npm version major && npm run changelog",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:patch": "npm run validate && npm run version:patch && npm run build:prod",
    "release:minor": "npm run validate && npm run version:minor && npm run build:prod",
    "release:major": "npm run validate && npm run version:major && npm run build:prod",
    "pack:firefox": "web-ext build --source-dir=. --artifacts-dir=dist/firefox --overwrite-dest",
    "pack:chrome": "node scripts/pack-chrome.js",
    "dev:firefox": "web-ext run --source-dir=. --start-url=about:debugging#/runtime/this-firefox",
    "dev:chrome": "node scripts/dev-chrome.js"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@eslint/js": "^9.0.0",
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.0",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "babel-loader": "^9.1.0",
    "conventional-changelog-cli": "^4.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-webextension-mock": "^3.8.0",
    "mini-css-extract-plugin": "^2.7.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.0",
    "ts-jest": "^29.4.4",
    "web-ext": "^7.8.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Edge versions"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "browser": true,
      "es2022": true,
      "webextensions": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "error",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  }
}
